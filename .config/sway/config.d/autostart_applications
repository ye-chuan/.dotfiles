# Auth with polkit-gnome:
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Idle Configuration
exec swayidle idlehint 1
exec_always swayidle -w before-sleep "swaylock"

# Desktop Notifications
#exec mako  # mako can start automatically upon D-Bus activation (https://github.com/emersion/mako)

# Battery Notifier
exec batsignal -w 30 -c 10 -d 5

# Autotiling
exec autotiling

# cliphist
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
     
