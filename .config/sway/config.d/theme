
# Set inner/outer gaps
# Note: gaps outer is an offset from gaps inner, hence should be negative for smaller outer gaps
gaps inner 10px
gaps outer -3px

# default_border [style] [size optional], style can be `pixel` - removes title bar, `normal` adjust border but keeps title bar, or `none`
default_border pixel 2
default_floating_border pixel 2

# Don't show border if only 1 window in workspace
#smart_borders on

# Default Font
font pango:Jetbrains Mono Regular 10

# Set wallpaper: (done in `config.d/output` now)
#exec ~/.azotebg

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

