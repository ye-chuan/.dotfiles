### Core Sway Config (keybindings / basic behaviour)

# General Behaviour
focus_follows_mouse no
focus_wrapping no

# Logo Key (Mod1 for Alt)
set $mod Mod4

# Vim Directions
set $left h
set $down j
set $up k
set $right l

# Default Terminal Emulator
set $term wezterm
# Application Launcher
set $launcher fuzzel
# Power Menu
set $powermenu ~/.config/sway/scripts/power-menu.sh
# Lock Screen
set $lock swaylock

#
# Media Keys
#
    bindsym {
        # Volume
        XF86AudioRaiseVolume exec pamixer --unmute --increase 5
        XF86AudioLowerVolume exec pamixer --unmute --decrease 5
        XF86AudioMute exec pamixer --toggle-mute

        # Player
        XF86AudioPlay exec playerctl play-pause
        XF86AudioNext exec playerctl next
        XF86AudioPrev exec playerctl previous

        # Backlight
        XF86MonBrightnessUp exec brightnessctl -c backlight set +5%
        XF86MonBrightnessDown exec brightnessctl -c backlight set 5%-
    }

#
# Touchpad Gesturues
#
    bindgesture {
        swipe:3:up exec pamixer --unmute --increase 5
        swipe:3:down exec pamixer --unmute --decrease 5
    }

#
# App Shortcuts
#
    # File Explorer
    bindsym $mod+n exec thunar

    # Web Browser
    bindsym $mod+o exec firefox

    # Clipboard Manager
    bindsym $mod+Ctrl+v exec cliphist list | fuzzel -d -w 90 -l 30 -p "Select an entry to copy it to your clipboard buffer:"| cliphist decode | wl-copy
    # Delete an entry from the clipboard manager
    bindsym $mod+Ctrl+x exec cliphist list | fuzzel -d -w 90 -l 30 -t cc9393ff -S cc9393ff -p "Select an entry to delete it from cliphist:"| cliphist delete
    # Note: you can clear all cliphist entries by running `cliphist wipe`

#
# Screenshots
#
    # Snip a selection and pipe to swappy
    bindsym print exec grim -g "$(slurp)" - | swappy -f -
    bindsym $mod+Shift+s exec grim -g "$(slurp)" - | swappy -f -
    # Screenshot a window and pipe to swappy
    bindsym Ctrl+Print exec ~/.config/sway/scripts/screenshot-window.sh
    # Screenshot the current display and pipe to swappy
    bindsym Shift+Print exec ~/.config/sway/scripts/screenshot-display.sh

#
# Basics
#
    # Launch Terminal
    bindsym $mod+Return exec $term

    # Power Menu (was the keybinding to exit i3)
    bindsym $mod+Shift+e exec $powermenu

    # Kill Window
    bindsym $mod+Shift+q kill

    # Launcher
    bindsym $mod+d exec $launcher

    # Lock Screen
    bindsym $mod+f1 exec $lock
    # Lock with Copilot key
    bindsym XF86Assistant exec $lock

    # Media (alternatives to media keys)
    bindsym $mod+KP_Add exec pamixer --unmute --increase 5
    bindsym $mod+KP_Subtract exec pamixer --unmute --decrease 5
    bindsym $mod+KP_Divide exec pamixer --toggle-mute

    # Window Switcher
    bindsym $mod+p exec ~/.config/sway/scripts/window-switcher.sh

    # Move windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Change "normal" to "inverse" to switch left and right
    floating_modifier $mod normal

    # Reload Config
    bindsym $mod+Shift+r reload

#
# Navigation
#
    bindsym {
        # Change Window Focus
        $mod+$left focus left
        $mod+$down focus down
        $mod+$up focus up
        $mod+$right focus right

        # Move Window
        $mod+Shift+$left move left
        $mod+Shift+$down move down
        $mod+Shift+$up move up
        $mod+Shift+$right move right
    }

#
# Workspaces
#
    # Workspace bindings are using bindcode instead of bindsym for better Azerty compatibility.
    # Use `wev` to find keycodes

    bindcode {
        # Switch Workspace
        $mod+10 workspace number 1
        $mod+11 workspace number 2
        $mod+12 workspace number 3
        $mod+13 workspace number 4
        $mod+14 workspace number 5
        $mod+15 workspace number 6
        $mod+16 workspace number 7
        $mod+17 workspace number 8
        $mod+18 workspace number 9
        $mod+19 workspace number 10
        $mod+22 workspace back_and_forth   # Backspace

        # Send To Workspace
        $mod+Shift+10 move container to workspace number 1 ; workspace number 1
        $mod+Shift+11 move container to workspace number 2 ; workspace number 2
        $mod+Shift+12 move container to workspace number 3 ; workspace number 3
        $mod+Shift+13 move container to workspace number 4 ; workspace number 4
        $mod+Shift+14 move container to workspace number 5 ; workspace number 5
        $mod+Shift+15 move container to workspace number 6 ; workspace number 6
        $mod+Shift+16 move container to workspace number 7 ; workspace number 7
        $mod+Shift+17 move container to workspace number 8 ; workspace number 8
        $mod+Shift+18 move container to workspace number 9 ; workspace number 9
        $mod+Shift+19 move container to workspace number 10; workspace number 10
    }
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    # Send To Monitor
    bindsym {
        $mod+Shift+Right move workspace to output right
        $mod+Shift+Left move workspace to output left
        $mod+Shift+Down move workspace to output down
        $mod+Shift+Up move workspace to output up
    }

#
# Layout
#
    # Splits Follow Vim Defaults
    # Split Window Vertically
    bindsym $mod+s splitv   # Default: $mod+v
    # Split Window Horizontally
    bindsym $mod+v splith   # Default: $mod+b

    # Switch Layout Styles
    bindsym $mod+q layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Focused Window Toggle Fullscreen
    bindsym $mod+z fullscreen

    # Tiling / Floating Toggle
    bindsym $mod+Shift+space floating toggle

    # Toggle Focus Between Tiling Area & Floating Area
    bindsym $mod+space focus mode_toggle

    # Switch Focus To Parent Container
    bindsym $mod+a focus parent

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # We can send windows there and get them back later.

    # Send To Scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # Also cycles through the scratchpad windows
    bindsym $mod+minus scratchpad show

#
# Resizing
#
    bindsym {
        # Resize With Arrow Keys
        # px used for floating windows, ppt for tiled
        $mod+Right resize grow width 15 px or 2 ppt
        $mod+Left resize shrink width 15 px or 2 ppt
        $mod+Up resize grow height 15 px or 2 ppt
        $mod+Down resize shrink height 15 px or 2 ppt
    }

    # Resize Floating Windows With Mouse Scroll:
    bindsym --whole-window --border {
        # Resize Vertically
        $mod+button4 resize shrink height 5 px or 5 ppt
        $mod+button5 resize grow height 5 px or 5 ppt
        # Resize Horizontally
        $mod+Shift+button4 resize shrink width 5 px or 5 ppt
        $mod+Shift+button5 resize grow width 5 px or 5 ppt
    }
    # Note: `floating_modifier $mod normal` above allows
    #       for a more convenient way to resize with mouse
